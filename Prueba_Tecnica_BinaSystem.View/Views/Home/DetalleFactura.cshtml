@model Prueba_Tecnica_BinaSystem.View.Models.ReporteFactura

@{
    ViewData["Title"] = "DetalleFactura";
}

<h1>DetalleFactura</h1>

<div>
    <h4>ReporteFactura</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdFactura)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdFactura)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Establecimiento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Establecimiento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PuntoEmision)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PuntoEmision)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumeroFactura)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumeroFactura)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente.Identificacion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Identificacion)
        </dd>
    </dl>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Producto
            </th>
            <th>
                Cantidad
            </th>
            <th>
                Unidad de Medida
            </th>
            <th>
                Precio
            </th>
            <th>
                Iva
            </th>
            <th>
                Subtotal
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Detalles) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdDetalle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producto.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnidadMedida)
            </td>
            <td>
                $ @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                $ @Html.DisplayFor(modelItem => item.IVA)
            </td>
            <td>
                $ @Html.DisplayFor(modelItem => item.Subtotal)
            </td>
        </tr>
}
    </tbody>
</table>
<div class="d-flex justify-content-end">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subtotal)
        </dt>
        <dd class="col-sm-10 text-center">
            $ @Html.DisplayFor(model => model.Subtotal)
        </dd>
        <dt class="col-sm-2 ">
            @Html.DisplayNameFor(model => model.TotalIVA)
        </dt>
        <dd class="col-sm-10 text-center">
            $ @Html.DisplayFor(model => model.TotalIVA)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class="col-sm-10 text-center">
            $ @Html.DisplayFor(model => model.Total)
        </dd>
    </dl>
</div>
