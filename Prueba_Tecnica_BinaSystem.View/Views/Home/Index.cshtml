                $("#Subtotal").text(subtotalF.toFixed(2))
                $("#Iva").text(ivaF.toFixed(2));
                $("#Total").text(totalF.toFixed(2));

                $("#codigoProducto").text("");
                $("#nombreProducto").text("");
                $("#txtQty").val("");
                $("#txtPrice").val("");
            });
            

